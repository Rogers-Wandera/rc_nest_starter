{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "typeCheck": true,
    "builder": "swc"
  },
  "projects": {
    "maincore": {
      "type": "library",
      "root": "libs/maincore",
      "entryFile": "index",
      "sourceRoot": "libs/maincore/src",
      "compilerOptions": {
        "tsConfigPath": "libs/maincore/tsconfig.lib.json"
      }
    }
  }
}
